<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal" >

    <ImageView
        android:id="@+id/image_film"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/shawn" />
    <TextView
        android:id="@+id/textDataFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="Data Film"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" >
        <TextView
            android:paddingStart="20dp"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Judul             :" />
        <TextView
            android:id="@+id/txtJudulFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Shawnshank Redemption" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" >
        <TextView
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Genre            :" />
        <TextView
            android:id="@+id/txtGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjara, Drama, Kriminal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" >
        <TextView
            android:paddingStart="20dp"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Tahun            :" />
        <TextView
            android:id="@+id/txtTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="1994"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" >
        <TextView
            android:paddingStart="20dp"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Rating           :" />
        <TextView
            android:id="@+id/txtRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="9.3" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCLose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Close" />



</LinearLayout>